{
  "manifest_version": 2,
  "name": "MacroMicro Enhancer",
  "version": "1.0",
  "description": "Enhance MacroMicro website by adding buttons for various functionalities.",
  "permissions": [
    "activeTab",
    "https://*.macromicro.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.macromicro.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
